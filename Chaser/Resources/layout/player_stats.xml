<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg2"
    android:layoutDirection="ltr">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/player"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="User Name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"/>

    <!-- Current Record Container -->
    <RelativeLayout
        android:id="@+id/current_record_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginTop="64dp">

        <!-- Current Record Text -->
        <TextView
            android:id="@+id/current_record_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Your Current Record is:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="serif"
        />

        <!-- Current Record Number -->
        <TextView
            android:id="@+id/current_record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_record_text"
            android:layout_centerHorizontal="true"
            android:text="100"
            android:textSize="72sp"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="serif"/>
    </RelativeLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/returnhomeupd"
        android:id="@+id/returnHome"
        android:background="@android:color/transparent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
